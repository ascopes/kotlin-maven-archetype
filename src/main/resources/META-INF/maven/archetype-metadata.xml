<archetype-descriptor name="quickstart">
    <fileSets>
        <fileSet filtered="true" packaged="true">
            <directory>src/main/kotlin</directory>
            <includes>
                <include>**/*.kt</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>src/test/kotlin</directory>
            <includes>
                <include>**/*.kt</include>
            </includes>
        </fileSet>
    </fileSets>

    <requiredProperties>
        <requiredProperty key="package"/>
    </requiredProperties>
</archetype-descriptor>